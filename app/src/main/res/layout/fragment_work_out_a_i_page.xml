<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AIHelperPage"
    android:backgroundTint="@color/white"
    android:background="@color/white">
    <TextView
        android:id="@+id/exercise_helper_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/secondary_color"
        android:text="Exercise Assistant"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins_bold"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="10dp"/>

    <ScrollView
        android:id="@+id/scrollview_ai_helper"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toBottomOf="@+id/exercise_helper_title"
        app:layout_constraintBottom_toTopOf="@id/submit_ai_message_container"
        app:layout_constraintRight_toLeftOf="parent"
        android:scrollbars="none">
        <LinearLayout
            android:id="@+id/chat_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/aihelper"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/ai_intro_message"
                    android:justificationMode="inter_word"
                    android:fontFamily="@font/roboto"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:padding="10dp"
                    />
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/submit_ai_message_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:paddingHorizontal="10dp"
        android:layout_marginBottom="10dp">

        <EditText
            android:hint="@string/AI_inquiry"
            android:id="@+id/ai_message_request"
            android:layout_width="0dp"
            android:layout_weight=".8"
            android:layout_height="70dp"
            android:background="@drawable/input_background"
            android:textColor="@color/black"
            android:layout_marginEnd="10dp"
            android:textSize="12sp"
            android:fontFamily="@font/roboto"
            android:textColorHint="@color/secondary_color"
            android:padding="10dp"/>
        <ImageButton
            android:contentDescription="@string/submit_ai_inquiry"
            android:id="@+id/submit_ai_message"
            android:layout_width="0dp"
            android:layout_weight=".2"
            android:layout_height="70dp"
            android:padding="10dp"
            android:layout_gravity="end"
            android:scaleType="fitCenter"
            android:background="@drawable/ai_button"
            android:backgroundTint="@color/secondary_color"
            android:src="@drawable/submit"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>